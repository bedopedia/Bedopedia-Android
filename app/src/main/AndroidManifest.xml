<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bedopedia.bedopedia_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Notification" ></activity>

        <activity android:name=".MyKidsActivity"></activity>

        <activity android:name=".GradesAvtivity"></activity>

        <activity android:name=".ForgetPasswordActivity"></activity>

        <activity android:name=".ActivityCourse"></activity>

        <activity android:name=".AttendanceActivity"></activity>
        
        <activity android:name=".StudentActivity"></activity>
    </application>

</manifest>