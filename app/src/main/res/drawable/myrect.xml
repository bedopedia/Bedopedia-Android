<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:bottom="0dp" android:left="0dp">
        <shape>
            <gradient android:angle="270"
                android:endColor="#CCCCFF" android:startColor="#E2E2E2" />
            <stroke android:width="1dp" android:color="#E2E2E2" />
            <corners android:radius="6dp" />
            <padding android:bottom="2dp" android:left="5dp"
                android:right="0dp" android:top="0dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>