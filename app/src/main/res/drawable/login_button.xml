<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"
        android:drawable="@android:drawable/dialog_holo_light_frame" android:color="#3d000000"
        android:top="1dp" android:bottom="4.5dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#3d000000" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dp" />
            <gradient android:angle="-90" android:startColor="#ff28bb4e" android:endColor="#ff28bb4e" />
        </shape>
    </item>
</layer-list>