<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/student_drawer_layout">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafafa"
    android:fitsSystemWindows="true"
    tools:context="com.example.bedopedia.bedopedia_android.StudentActivity">

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/activity_child"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#fffafafa"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bedopedia.bedopedia_android.StudentActivity"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:id="@+id/badges_layout_button"
                >



                <RelativeLayout
                    android:id="@+id/relative_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    >

                    <Button
                        android:id="@+id/badges_button"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:background="@drawable/tree_badge_icons" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/badges_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/relative_layout1"
                    android:background="@drawable/badge_circle"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:text=""
                    android:textStyle="bold" />



            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_student_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/mask"
                android:layout_gravity="center"
                android:padding="7dp"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                />
            <TextView
                android:id="@+id/st_home_text_name"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"

                android:background="@drawable/circle_text"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                >



                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    >

                    <Button
                        android:id="@+id/home_action_bar_notification"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:clickable="true"
                        android:background="@drawable/messages" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/notification_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/relative_layout"
                    android:background="@drawable/notification_circle"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFF"
                    android:textSize="12sp"
                    android:text="2"
                    android:textStyle="bold" />



            </RelativeLayout>


        </FrameLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight=".80"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/home_student_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#de000000"
                android:layout_marginTop="10dp"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_student_level"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#de000000"
                android:layout_marginTop="5dp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"
        android:id="@+id/open_attendance"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="0.03">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/attendance_ico"
                android:id="@+id/attendace_icon"
                android:layout_marginTop="20dp"/>
        </FrameLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Attendance"
                    android:layout_width="0dp"
                    android:layout_weight=".80"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="16sp"
                    android:textColor="#de000000"
                    android:textStyle="normal|bold"
                    android:layout_marginTop="10dp"/>

                <ImageButton
                    app:srcCompat="@drawable/small_next"
                    android:background="@null"
                    android:id="@+id/attendance_button"
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:layout_marginTop="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendance_text"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#8a000000"
                    android:layout_weight="1"
                    />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:id="@+id/attendance_progress"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_marginTop="15dp"
                    android:layout_weight="3"
                     />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:background="#ffe5e5e5"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"
        android:id="@+id/open_timetable"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/timetable"
                android:id="@+id/imageView4"
                android:layout_marginTop="20dp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="TimeTable"
                android:textStyle="normal|bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:text="next: Math K1, Sunday 9:00 AM"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="#8a000000"
                android:layout_height="wrap_content"
                android:id="@+id/next_slot"
                android:paddingTop="10dp"
                />

        </LinearLayout>

        <ImageButton
            app:srcCompat="@drawable/small_next"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:id="@+id/timetable_btn"
            android:layout_weight="0.03"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:background="#ffe5e5e5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="10dp"
        android:id="@+id/open_grades"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.02"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/grades_ico"
                android:id="@+id/imageView5"
                android:layout_marginTop="20dp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Grades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#8a000000"
                android:id="@+id/average_grade"
                android:paddingTop="10dp" />
        </LinearLayout>

        <ImageButton
            app:srcCompat="@drawable/small_next"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginTop="15dp"
            android:id="@+id/grades_btn"
            android:layout_weight="0.03" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:background="#ffe5e5e5"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/open_notes"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        >

        <FrameLayout
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="0.03">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/behavior_notes_ico"
                android:id="@+id/imageView6"
                android:layout_marginTop="20dp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="50dp">

            <TextView
                android:text="Behavior notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textSize="16sp"
                android:textColor="#de000000"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/positive_icon"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/positive_notes_counter"
                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="#8a000000"
                        android:paddingTop="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="0.5">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/negative_icon"/>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/negative_notes_counter"                        android:layout_marginLeft="8dp"
                        android:textSize="14sp"
                        android:textColor="#8a000000"
                        android:paddingTop="1dp"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            app:srcCompat="@drawable/small_next"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginTop="15dp"
            android:id="@+id/behavior_notes_btn"
            android:layout_weight="0.03" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="90dp"
        android:background="#ffe5e5e5"/>


</LinearLayout>




</ScrollView>
    <ListView

        android:id="@+id/student_listview_notification"
        android:background="@color/white"
        android:divider="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ListView>
</android.support.v4.widget.DrawerLayout>






