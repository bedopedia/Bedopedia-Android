<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="16.5dp"
    android:id="@+id/layout_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">
        <agency.tango.android.avatarview.views.AvatarView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_student"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            app:av_border_color="@color/jade_green"
            app:av_border_width="1.5dp"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:id="@+id/tv_student_name"
                android:text="Ahmed mostafa"
                android:layout_alignParentTop="true"
                android:textColor="@color/greyish_brown"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/steel"
                    android:id="@+id/tv_grade"
                    android:text="3rd Grade"
                    android:ellipsize="end"
                    android:maxLines="1"/>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:id="@+id/img_state"
                    android:src="@drawable/present"
                    android:layout_marginEnd="4dp"
                  />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:textColor="@color/steel"
                    android:id="@+id/tv_state_student"
                    android:text="3rd Grade"
                    android:layout_marginEnd="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxLines="1"/>

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shape"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"
                android:id="@+id/btn_open"/>
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/lightish_red"
            android:text="@string/quizzes"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:id="@+id/tv_quizzes"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/jade_green"
            android:text="@string/assignments"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/tv_assignment"/>


        <TextView
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/dusty_orange"
            android:text="@string/events"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_events"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/view_line"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="match_parent"
            android:background="@color/silver"/>

    </LinearLayout>

</LinearLayout>