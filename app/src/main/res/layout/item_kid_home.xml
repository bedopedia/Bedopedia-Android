<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:paddingTop="16.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">

        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/img_student"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            app:av_border_color="@color/jade_green"
            app:av_border_width="1.5dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <trianglz.components.SfuiSemiBoldTextView
                android:id="@+id/tv_student_name"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Ahmed mostafa"
                android:textColor="@color/greyish_brown"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <trianglz.components.SfproRegularTextView
                    android:id="@+id/tv_grade"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="3rd Grade"
                    android:textColor="@color/steel"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/present" />

                <trianglz.components.SfproRegularTextView
                    android:id="@+id/tv_state_student"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1.1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="3rd Grade"
                    android:textColor="@color/steel"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageButton
                android:id="@+id/btn_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/shape" />
        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <trianglz.components.SfuiSemiBoldTextView
            android:id="@+id/tv_quizzes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/quizzes"
            android:textAllCaps="false"
            android:textColor="@color/lightish_red"
            android:textSize="16sp" />

        <trianglz.components.SfuiSemiBoldTextView
            android:id="@+id/tv_assignment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/assignments"
            android:textColor="@color/jade_green"
            android:textSize="16sp" />


        <trianglz.components.SfuiSemiBoldTextView
            android:id="@+id/tv_events"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/events"
            android:textColor="@color/dusty_orange"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

        <View
            android:id="@+id/view_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:background="@color/silver" />

    </LinearLayout>

</LinearLayout>