<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:id="@+id/card_view"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:paddingTop="16.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/img_student"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                app:av_border_color="@color/jade_green"
                app:av_border_width="1.5dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <trianglz.components.SfuiSemiBoldTextView
                    android:id="@+id/tv_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Ahmed mostafa"
                    android:textColor="@color/greyish_brown"
                    android:textSize="18sp"
                    android:textAlignment="viewStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <trianglz.components.SfproRegularTextView
                        android:id="@+id/tv_grade"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="3rd Grade"
                        android:textColor="@color/steel"
                        android:textSize="15sp"
                        android:textAlignment="viewStart" />

                    <ImageView
                        android:id="@+id/img_state"
                        android:layout_width="18dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/present" />

                    <trianglz.components.SfproRegularTextView
                        android:id="@+id/tv_state_student"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1.1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="3rd Grade"
                        android:textColor="@color/steel"
                        android:textSize="15sp"
                        android:textAlignment="viewStart" />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <trianglz.components.SfuiSemiBoldTextView
                android:id="@+id/tv_quizzes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/quizzes"
                android:textAllCaps="false"
                android:textColor="@color/lightish_red"
                android:textSize="16sp"
                android:includeFontPadding="false" />

            <trianglz.components.SfuiSemiBoldTextView
                android:id="@+id/tv_assignment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/assignments"
                android:textColor="@color/jade_green"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:clickable="true" />


            <trianglz.components.SfuiSemiBoldTextView
                android:id="@+id/tv_events"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="@string/events"
                android:textColor="@color/dusty_orange"
                android:textSize="16sp"
                android:maxLines="1"
                android:includeFontPadding="false" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp">

            <View
                android:id="@+id/view_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>