<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="138dp"
    android:orientation="vertical"
    android:background="@color/posts_background">
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">
        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/iv_post_img"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/arabic_icon"/>
        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/posts_black"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="English"/>
        <trianglz.components.SfuiBoldTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:background="@drawable/circle_whiteo_background"
            android:text="+3"
            android:textSize="16sp"
            android:textColor="@color/posts_red"/>
        <ImageButton
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/chevron_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginStart="72dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7a8993"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:text="Mr.mahmoud omar"/>
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:maxLines="2"
            android:layout_marginEnd="10dp"
            android:paddingEnd="24dp"
            android:ellipsize="end"
            android:text="@string/posts_text_placeholder"/>

    </LinearLayout>
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="#778899"/>
</LinearLayout>