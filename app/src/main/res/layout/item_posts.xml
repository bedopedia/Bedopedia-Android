<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:background="@color/posts_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/iv_post_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:src="@drawable/arabic_icon" />

            <trianglz.components.RobotoRegularTextView
                android:id="@+id/tv_subject"
                android:maxLines="1"
                android:text="English"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical|start"
                android:textAlignment="viewStart"
                android:ellipsize="end"
                android:layout_marginEnd="5dp"
                android:includeFontPadding="false" />

            <trianglz.components.LatoBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/red"
                android:layout_gravity="center_vertical"
                android:textAlignment="textStart"
                android:text="+100"
                android:id="@+id/tv_number"
                android:gravity="start|center_vertical"
                android:includeFontPadding="false" />

            <ImageButton
                android:id="@+id/btn_open"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/shape"
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mr.mahmoud omar"
                android:textColor="#7a8993"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:paddingEnd="24dp"
                android:text="@string/posts_text_placeholder"
                android:textColor="#de000000"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="360dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="72dp"
            android:background="@color/silver" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


    </RelativeLayout>
</LinearLayout>