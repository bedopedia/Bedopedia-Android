<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trianglz.ui.fragments.BehaviorNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:elevation="2dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:src="@drawable/chevron_left"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <trianglz.components.SfproSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="@string/behaviour_notes"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_texts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <trianglz.components.SfuiRegularTextView
                            android:id="@+id/tv_positive"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_weight="1"
                            android:background="@drawable/curved_solid_left_green"
                            android:gravity="center"
                            android:text="@string/positiveBehaviorNotes"
                            android:textAlignment="center"
                            android:textColor="@color/white" />



                        <trianglz.components.SfuiRegularTextView
                            android:id="@+id/tv_negative"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/negativeBehaviorNotes"
                            android:textAlignment="center"
                            android:textColor="@color/jade_green" />



                        <trianglz.components.SfuiRegularTextView
                            android:id="@+id/tv_other"
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_weight="1"
                            android:background="@drawable/curved_stroke_right_green"
                            android:gravity="center"
                            android:text="@string/other"
                            android:textAlignment="center"
                            android:textColor="@color/jade_green" />
                    </LinearLayout>
                </LinearLayout>

                <agency.tango.android.avatarview.views.AvatarView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/img_student"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/steel_transparent" />

        <trianglz.components.CustomRtlViewPager
            android:id="@+id/behavior_notes_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout>

</FrameLayout>
