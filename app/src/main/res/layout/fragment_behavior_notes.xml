<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/white"
    tools:context="trianglz.ui.fragments.BehaviorNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="2dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/back_btn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:src="@drawable/chevron_left"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="5dp" />

                    <trianglz.components.SfproSemiBoldTextView
                        android:id="@+id/tv_subject_header"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginStart="9dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:text="@string/behavior_notes"
                        android:textSize="24sp" />

                    <agency.tango.android.avatarview.views.AvatarView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/img_student"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="4dp" />
                </LinearLayout>

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:tabRippleColor="@color/transparent"
                    app:tabSelectedTextColor="@color/jade_green"
                    app:tabIndicatorColor="@color/jade_green"
                    app:tabTextColor="@color/steel"
                    app:tabTextAppearance="@style/BehaviorNoteTabStyle">

                    <android.support.design.widget.TabItem
                        android:id="@+id/open_tab"
                        android:text="@string/positiveBehaviorNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <android.support.design.widget.TabItem
                        android:text="@string/negativeBehaviorNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <android.support.design.widget.TabItem
                        android:text="@string/other"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TabLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/steel_transparent" />


        <trianglz.components.CustomRtlViewPager
            android:id="@+id/behavior_notes_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout>

</FrameLayout>
