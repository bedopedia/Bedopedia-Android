<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/change_password_dialog_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:background="@color/transparent"
            android:src="@drawable/close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="29dp"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/old_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_old_password"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="@android:color/transparent"
                    android:hint="@string/old_password"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/warm_grey_four"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/btn_show_old_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:textColor="@color/warm_grey"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="30dp"
                    android:text="@string/show"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:id="@+id/view_old_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="18dp"
                android:background="@color/greyish" />

            <TextView
                android:id="@+id/old_password_error_tv"
                android:textColor="@color/tomato"
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="18dp" />

            <LinearLayout
                android:id="@+id/new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:textAlignment="viewStart"
                    android:background="@android:color/transparent"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/warm_grey_four"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/btn_show_new_password"
                    android:textColor="@color/warm_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="@string/show"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:id="@+id/view_new_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="18dp"
                android:background="@color/greyish" />

            <TextView
                android:id="@+id/new_password_error_tv"
                android:textColor="@color/tomato"
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="18dp" />

            <LinearLayout
                android:id="@+id/confirm_new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_confirm_new_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="25dp"
                    android:textAlignment="viewStart"
                    android:background="@android:color/transparent"
                    android:hint="@string/confirm_new_password"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/warm_grey_four"
                    android:textCursorDrawable="@null"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/btn_show_confirm_new_password"
                    android:textColor="@color/warm_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="30dp"
                    android:textStyle="bold"
                    android:text="@string/show"
                    android:background="@color/transparent"
                    android:backgroundTint="@color/transparent"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:id="@+id/view_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="18dp"
                android:background="@color/greyish" />

            <TextView
                android:id="@+id/confirm_password_error_tv"
                android:textColor="@color/tomato"
                android:visibility="gone"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="18dp" />

            <Button
                android:id="@+id/update_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="13dp"
                android:textAllCaps="false"
                android:background="@drawable/curved_jade_green"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>