<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:id="@+id/card_view"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:minHeight="72dp">


        <android.support.constraint.Guideline
            android:id="@+id/start_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp" />


        <android.support.constraint.Guideline
            android:id="@+id/end_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="0dp" />

        <android.support.constraint.Guideline
            android:id="@+id/top_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp" />



        <android.support.constraint.Guideline
            android:id="@+id/bottom_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="0dp" />



        <android.support.constraint.Guideline
            android:id="@+id/day_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="80dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/ll_day"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/day_guide_line"
            app:layout_constraintTop_toTopOf="@id/top_guide_line"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guide_line"
            app:layout_constraintStart_toStartOf="@id/start_guide_line">
            <TextView
                android:id="@+id/tv_day_number"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="5"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="4dp"
                android:textColor="@color/gunmetal"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_month_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="mar"
                android:textColor="@color/gunmetal"
                android:textSize="14sp" />
        </LinearLayout>





        <View
            android:id="@+id/view_line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/day_guide_line"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/squash" />



        <TextView
            android:id="@+id/tv_event_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="kljsdsadjlsajklsadjlsakdj"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@id/end_guide_line"
            app:layout_constraintTop_toTopOf="@id/top_guide_line"
            app:layout_constraintStart_toEndOf="@id/view_line"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:textColor="@color/black"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/tv_event_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/steel"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            android:text="jlsdadjsdkasdjlasjaks;dsakjadskjdasldsjkldsajkldsajsjlaksjlaskjaskjdaljaldksajlsajasld;skdsaksakdlsakldadsljasdlkdjsaldsa"
            app:layout_constraintStart_toEndOf="@id/view_line"
            app:layout_constraintEnd_toEndOf="@id/end_guide_line"
            app:layout_constraintTop_toBottomOf="@id/tv_event_title"
            app:layout_constraintBottom_toBottomOf="@id/bottom_guide_line"/>




    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>