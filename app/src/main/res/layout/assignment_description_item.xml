<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:elevation="2dp">

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tv_course_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:autoLink="web"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:text="Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math. Your assignment is about math."
            android:textColor="#de000000"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>
</LinearLayout>