<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:src="@drawable/chevron_left" />

                    <TextView
                        android:id="@+id/tv_course_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="32dp"
                        android:background="@android:color/transparent"
                        android:text="@string/attendance"
                        android:textColor="@color/greyish_brown"
                        android:textSize="20sp"
                        android:layout_marginEnd="2dp"
                        style="@style/RobotoMediumStyle" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/full_day_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/full_day_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/full_day"
                        android:textAllCaps="false"
                        android:textColor="@color/cerulean_blue"
                        android:textSize="16sp"
                        style="@style/RobotoMediumStyle"/>

                    <View
                        android:id="@+id/full_day_view"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/cerulean_blue"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/per_slot_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/per_slot_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:text="@string/per_slot"
                        android:textAllCaps="false"
                        android:textColor="@color/greyish"
                        style="@style/RobotoMediumStyle"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/per_slot_view"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/cerulean_blue"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/silver" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <include layout="@layout/item_shimmer_layout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/snow"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/todays_date"
                        android:layout_width="0dp"
                        android:gravity="center_vertical"
                        android:text="Monday 23 Sep"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColor="@color/cerulean_blue"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        style="@style/RobotoMediumStyle"/>

                    <Button
                        android:id="@+id/assign_all_btn"
                        android:layout_width="0dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/cerulean_blue"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:background="@color/transparent"
                        android:text="@string/assign_for_all"
                        style="@style/RobotoMediumStyle"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_weight="1" />

                    <trianglz.components.RobotoRegularButton
                        android:id="@+id/assign_selected_btn"
                        android:layout_width="0dp"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/cerulean_blue"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:background="@color/transparent"
                        android:visibility="gone"
                        android:text="@string/assign_for_selected"
                        android:layout_height="match_parent"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/placeholder_layout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/attendance_placeholder" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:textSize="16sp"
                    android:text="@string/attendance_placeholder" />
            </LinearLayout>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>