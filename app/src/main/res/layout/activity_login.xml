<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="trianglz.ui.activities.LoginActivity"
    android:id="@+id/parent_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_marginBottom="3dp"
        android:paddingEnd="24dp"
        android:paddingStart="13dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/chevron_left" />

        <trianglz.components.SfproRegularButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/forget_your_password"
            android:textAllCaps="false"
            android:textColor="@color/steel"
            android:textSize="15sp"
            android:visibility="invisible"/>


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_school"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:src="@drawable/logo_icon" />

    <trianglz.components.SfproRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:text="@string/email_address"
        android:textColor="@color/greyish_brown"
        android:textSize="17sp"
        android:layout_marginBottom="4dp" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="22dp"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:hint="@string/enter_email"/>

    <trianglz.components.SfproRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:text="@string/password"
        android:textColor="@color/greyish_brown"
        android:textSize="17sp"
       />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:singleLine="true"
            android:maxLines="1"
            android:drawablePadding="5dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="32dp"
            android:hint="@string/enter_password"
            />


    <trianglz.components.SfProBlackButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/login"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/round_btn_shape"
        style="?android:attr/borderlessButtonStyle"
        />



</LinearLayout>
