<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:fitsSystemWindows="true"
    tools:context="com.example.bedopedia.bedopedia_android.LoginActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_screen"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_gravity="center"
            android:layout_height="96dp"
            android:layout_width="71dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView android:id="@+id/head_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="51dp"
            android:gravity="center"
            android:text="Enter your email and password to sign in."/>

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="39dp">
            <AutoCompleteTextView android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:drawableLeft="@drawable/email_icon"
                android:drawablePadding="17dp"
                android:hint="Email" />
        </android.support.design.widget.TextInputLayout>

        <!-- password lable-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="39dp">
            <AutoCompleteTextView android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:imeOptions="actionGo"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="17dp"
                android:hint="Password" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/loginSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:layout_marginTop="34dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:width="248dp"
            android:height="48dp"

            android:text="Login"
            android:background="@drawable/login_button"
            android:textColor="@color/white"/>

        <!-- forget password text lable-->
        <TextView android:id="@+id/forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="34dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"

            android:inputType="textEmailAddress"
            android:gravity="center"
            android:text="Forget password?" />

    </LinearLayout>



</ScrollView>
