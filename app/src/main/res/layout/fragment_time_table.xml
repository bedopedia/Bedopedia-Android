<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trianglz.ui.fragments.TimeTableFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:elevation="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:src="@drawable/chevron_left"
                    android:layout_marginStart="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <trianglz.components.SfproSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="@string/timetable"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/layout_texts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/hollow_green_background"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <trianglz.components.SfuiRegularTextView
                            android:id="@+id/tv_today"
                            android:layout_width="120dp"
                            android:layout_height="28dp"
                            android:background="@drawable/text_solid_background"
                            android:gravity="center"
                            android:text="@string/today"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <trianglz.components.SfuiRegularTextView
                            android:id="@+id/tv_tomorrow"
                            android:layout_width="120dp"
                            android:layout_height="28dp"
                            android:gravity="center"
                            android:text="@string/tomorrow"
                            android:textAlignment="center"
                            android:textColor="@color/jade_green" />
                    </LinearLayout>
                </LinearLayout>

                <agency.tango.android.avatarview.views.AvatarView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/img_student"
                    android:src="@drawable/profile_pic" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <trianglz.components.CustomRtlViewPager
            android:id="@+id/timetable_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

</FrameLayout>
