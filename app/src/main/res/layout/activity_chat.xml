<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trianglz.ui.activities.ChatActivity"
    android:orientation="vertical"
    android:id="@+id/root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white_70"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:foreground="@drawable/round_ripple_25"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:id="@+id/btn_back"
            android:src="@drawable/chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="@color/greyish_brown"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_chat_header"
            android:text="@string/new_message"
            style="@style/RobotoMediumStyle"
            android:layout_alignStart="@id/btn_back"
            android:layout_marginStart="32dp"
            android:gravity="start"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_gravity="bottom" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingVertical="6dp"
        android:clipToPadding="false"
        android:background="@color/white"
        android:id="@+id/recycler_view"
        android:layoutDirection="ltr" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_gravity="bottom" />
    <androidx.cardview.widget.CardView
        android:id="@+id/chat_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_send"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white_70"
            android:orientation="horizontal">

            <com.vanniktech.emoji.EmojiEditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/enter_your_messages"
                android:includeFontPadding="false"
                android:paddingStart="24dp"
                android:singleLine="true"
                android:inputType="textCapSentences"
                android:textColor="@color/greyish_brown"
                android:textColorHint="#c4c0bd"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btn_image"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                android:tint="@color/attachment_color"
                android:background="@color/transparent"
                android:src="@drawable/btn_attach" />

            <ImageButton
                android:id="@+id/enter_chat1"
                android:layout_width="47dp"
                android:tint="@color/attachment_color"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:src="@drawable/btn_send" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
