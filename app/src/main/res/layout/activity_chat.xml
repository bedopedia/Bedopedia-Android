<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trianglz.ui.activities.ChatActivity"
    android:orientation="vertical"
    android:id="@+id/root_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:foreground="@drawable/round_ripple_25"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:id="@+id/btn_back"
            android:src="@drawable/chevron_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="@color/greyish_brown"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/tv_chat_header"
            android:text="@string/new_message"
            style="@style/RobotoMediumStyle"
            android:layout_alignStart="@id/btn_back"
            android:layout_marginStart="32dp"
            android:gravity="start"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_gravity="bottom"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/recycler_view"
        android:layoutDirection="ltr"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e5e5e5"
        android:layout_gravity="bottom"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white_70"
        android:id="@+id/ll_send"
        android:padding="7dp">

        <com.vanniktech.emoji.EmojiEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:textSize="17sp"
            android:textColorHint="#c4c0bd"
            android:background="@drawable/curved_white_background"
            android:hint="@string/write_a_message"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:imeOptions="actionDone"
            android:id="@+id/et_message"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_image"
            android:background="@color/transparent"
            android:tint="@color/greyish_brown"
            android:src="@drawable/ic_send_image"
            android:layout_marginEnd="3dp"/>
        <Button
            android:id="@+id/enter_chat1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:text="@string/send"
            style="@style/RobotoMediumStyle"
            android:foreground="@drawable/round_ripple_19"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>
