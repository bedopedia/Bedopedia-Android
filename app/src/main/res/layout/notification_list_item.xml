<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >

    <ImageView

        android:id="@+id/notificationLogo"
        android:src="@drawable/notification"
        android:scaleType="fitCenter"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:text="Math Quiz subbmitted successfully  and autograded"
            android:layout_height="wrap_content"
            android:id="@+id/notificationContent"
            android:textSize="20sp"
            android:textColorLink="?android:attr/colorForeground"
            tools:textColor="?android:attr/colorForeground"
            android:layout_width="447dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
        android:text="Today 9:00 Am"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/notificationDate"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:layout_below="@+id/notificationLogo"
        android:layout_alignLeft="@+id/notificationContent"
        android:layout_alignStart="@+id/notificationContent" />
        </LinearLayout>


    </LinearLayout>
