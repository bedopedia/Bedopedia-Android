<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp">

        <ImageView

            android:id="@+id/notification_logo"
            android:src="@drawable/quizzes_ico"
            android:layout_height="28.1dp"
            android:layout_width="23.33dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/border_bottom_notification">

        <TextView
            android:text="Math - Quiz calc.32 was submitted successfully and autograded."
            android:layout_height="wrap_content"
            android:id="@+id/notification_content"
            android:textSize="14sp"
            android:textColorLink="?android:attr/colorForeground"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_gravity="left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"
            android:layout_marginRight="16dp"
            android:paddingTop="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">

                <TextView
                    android:text="Kareem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ligth_grey"
                    android:textSize="12sp"
                    android:id="@+id/student_names"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/notification_date"
                    android:textSize="12sp"
                    android:layout_gravity="left"
                    android:layout_below="@+id/notification_logo"
                    android:layout_alignLeft="@+id/notification_content"
                    android:layout_alignStart="@+id/notification_content"
                    android:layout_weight="1"
                    android:textColor="@color/ligth_grey"
                    android:text="Today 9:00 AM"
                    android:layout_marginRight="16dp"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
