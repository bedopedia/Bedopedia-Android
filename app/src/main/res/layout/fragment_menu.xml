<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_fragment_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/snow"
    android:orientation="vertical"
    tools:context="trianglz.ui.fragments.MenuFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:background="@color/transparent"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:contentScrim="@color/transparent"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="-0.01">

                <agency.tango.android.avatarview.views.AvatarView
                    android:id="@+id/img_student"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/profile_pic" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toStartOf="@+id/img_student"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/badge"
                    android:drawablePadding="8dp"
                    android:text="@string/Badges"
                    android:textAllCaps="false"
                    android:textColor="@color/steel"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/btn_messages"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/img_student"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/message_red"
                    android:drawablePadding="3dp"
                    android:includeFontPadding="false"
                    android:text="@string/messages"
                    android:textAllCaps="false"
                    android:textColor="@color/steel"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="2dp"
                        android:textColor="@color/greyish_brown"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Farida Ahmed Alaa" />

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:textColor="@color/steel"
                        android:textSize="14sp"
                        tools:text="year 7"
                        tools:visibility="gone" />
                </LinearLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/view_shimmer"
                layout="@layout/menu_skeleton_shimmer_layout"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/attendance_home" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingStart="8dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="1dp"
                            android:paddingBottom="13dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/attendance"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:id="@+id/layout_attendance_data"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                tools:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_attendance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="2dp"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/steel"
                                    android:textSize="14sp" />


                                <com.sasank.roundedhorizontalprogress.RoundedHorizontalProgressBar
                                    android:id="@+id/progress_bar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="80dp"
                                    android:layout_height="8dp"
                                    android:layout_marginEnd="40dp"
                                    android:indeterminate="false"
                                    android:progress="50"
                                    android:visibility="gone"
                                    app:backgroundColor="@color/white_two"
                                    app:progressColor="@color/jade_green" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_grades"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/grades" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="13dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/grades"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_grade"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_assignments"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/assignment" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/assignments"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_assignments"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_quizzes"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/quiz" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/quizzes"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_quizzes"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/circle_catskill_background_circle"
                                android:padding="10dp"
                                android:src="@drawable/posts_home" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="13dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:layout_alignParentTop="true"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="@string/posts"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/greyish_brown"
                                    android:textSize="18sp" />


                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_timetable"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/timetable_home" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="13dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/time_table"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_time_table"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_weekly_planner"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/weekly_planner_home" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="13dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/weekly_planner"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_weekly_planner"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/circle_catskill_background_circle"
                                android:padding="10dp"
                                android:src="@drawable/event" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingStart="8dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="13dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:layout_alignParentTop="true"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="@string/calendar"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/greyish_brown"
                                    android:textSize="18sp" />


                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_behavior_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/circle_catskill_background_circle"
                                android:padding="10dp"
                                android:src="@drawable/behaviour_notes" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:paddingStart="8dp"
                                android:paddingTop="16dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="22dp"
                                    android:layout_alignParentTop="true"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:text="@string/behavior_notes"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/greyish_brown"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="24dp"
                                    android:layout_alignParentBottom="true"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/positive_icon" />

                                    <TextView
                                        android:id="@+id/tv_positive_counter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="23dp"
                                        android:gravity="center_vertical"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/steel"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/negative_icon" />

                                    <TextView
                                        android:id="@+id/tv_negative_counter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="23dp"
                                        android:gravity="center_vertical"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/steel"
                                        android:textSize="14sp" />


                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/other" />

                                    <TextView
                                        android:id="@+id/tv_other_counter"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="23dp"
                                        android:gravity="center_vertical"
                                        android:includeFontPadding="false"
                                        android:textColor="@color/steel"
                                        android:textSize="14sp" />


                                </LinearLayout>


                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <include
                android:id="@+id/view_teacher_shimmer"
                layout="@layout/teacher_skeleton_shimmer_layout"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:id="@+id/layout_timetable_teacher"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/circle_catskill_background_circle"
                            android:padding="10dp"
                            android:src="@drawable/timetable_home" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:paddingTop="16dp"
                            android:paddingEnd="8dp"
                            android:paddingBottom="13dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="@string/time_table"
                                android:textAlignment="viewStart"
                                android:textColor="@color/greyish_brown"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_time_table_teacher"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textAlignment="viewStart"
                                android:textColor="@color/steel"
                                android:textSize="14sp"
                                android:visibility="gone" />

                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </FrameLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
