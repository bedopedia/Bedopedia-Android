<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp">

        <!--        <TextView-->
        <!--            android:id="@+id/question_number_tv"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:text="1"-->
        <!--            android:textStyle="bold"-->
        <!--            android:background="@color/transparent"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:textSize="20sp"-->
        <!--            android:textColor="@color/cool_grey" />-->

        <ImageButton
            android:id="@+id/btn_multi_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="false"
            android:focusable="false"
            android:layout_gravity="center"
            android:background="@drawable/curved_check_box_background_student"
            android:padding="8dp"
            android:src="@drawable/ic_white_check" />

        <ImageView
            android:id="@+id/image_sort"
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/sorting_icon" />

        <RadioButton
            android:id="@+id/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="@color/student_red" />

        <EditText
            android:id="@+id/match_answer_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:inputType="number"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLength="2"
            android:maxLines="1"
            android:textStyle="bold"
            android:background="@drawable/curved_solid_cool_grey" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:textColor="@color/posts_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/answer_photo_iv"
            android:src="@drawable/dragon"
            android:padding="6dp"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>