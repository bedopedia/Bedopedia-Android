<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/root"
    android:layout_marginStart="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/iv_owner_image"
                android:layout_width="30dp"
                android:visibility="visible"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_owner_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:layout_weight="1"
                android:text="asdjfklsdjfkldsf"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                style="@style/RobotoMediumStyle" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:text="asldkjfklsdfjdasdlfjsdklfj"
                android:textColor="#7a8993"
                android:textSize="12sp" />
        </LinearLayout>


        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/tv_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="@string/post_detail_place_holder"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:background="#eaedf3" />

        <LinearLayout
            android:id="@+id/ll_three_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_attachment_15dp"
                android:padding="4dp"
                android:background="@drawable/gradient" />

            <LinearLayout
                android:id="@+id/first_attachment_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/btn_first_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical|start"
                    android:text="Parachusjdlkasjdlksajdting"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:includeFontPadding="false" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/file_size_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="20KB"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:includeFontPadding="false"
                    android:textColor="#7a8993" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_attachment_15dp"
                android:padding="4dp"
                android:background="@drawable/gradient" />

            <LinearLayout
                android:id="@+id/second_attachment_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/btn_second_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_vertical|start"
                    android:text="Parachusjdlkasjdlksajdting"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:includeFontPadding="false" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/file_size_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:text="20KB"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:includeFontPadding="false"
                    android:textColor="#7a8993" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_attachment_15dp"
                android:padding="4dp"
                android:background="@drawable/gradient" />

            <LinearLayout
                android:id="@+id/third_attachment_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:id="@+id/btn_third_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="2"
                    android:layout_gravity="center_vertical|start"
                    android:text="Parachusjdlkasjdlksajdting"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:includeFontPadding="false" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/file_size_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:maxLength="4"
                    android:text="@string/more"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    android:includeFontPadding="false"
                    android:textColor="#7a8993" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>