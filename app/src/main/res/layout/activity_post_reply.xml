<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:focusable="true"
    android:id="@+id/root_view"
    android:orientation="vertical"
    tools:context="trianglz.ui.activities.PostReplyActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:contentInsetStart="0dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:src="@drawable/chevron_left" />

                <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="32dp"
                    android:background="@android:color/transparent"
                    android:text="@string/posts"
                    android:textColor="@color/greyish_brown"
                    android:textSize="20sp"
                    android:layout_marginEnd="2dp"
                    style="@style/RobotoMediumStyle" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="visible"
        android:background="@color/silver" />
    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/snow"
        android:padding="7dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/greyish"
            android:background="@drawable/curved_reply_background"
            android:hint="@string/send_a_reply"
            android:maxLines="1"
            android:imeActionLabel="@string/send"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:imeOptions="actionDone"
            android:id="@+id/et_reply" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send_white"
            android:background="@drawable/circle_blue_background"
            android:textAllCaps="false"
            android:scaleType="center"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"/>

    </LinearLayout>
</LinearLayout>
