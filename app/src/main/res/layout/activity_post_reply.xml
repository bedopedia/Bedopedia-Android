<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:focusable="true"
    android:id="@+id/root_view"
    android:orientation="vertical"
    tools:context="trianglz.ui.activities.PostReplyActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:navigationIcon="@drawable/chevron_left"
        android:background="@color/white"
        android:elevation="1dp"
        >


        <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAlignment="viewStart"
            android:text="Arabic"
            android:textColor="#de000000"
            android:textSize="24sp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#eceff0"
        android:padding="7dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:textSize="17sp"
            android:textColorHint="#c4c0bd"
            android:background="@drawable/curved_reply_background"
            android:hint="@string/send_a_reply"
            android:maxLines="1"
            android:imeActionLabel="@string/send"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:imeOptions="actionDone"
            android:id="@+id/et_reply"/>
        <ImageButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_up"
            android:background="@drawable/circle_blue_background"
            android:textAllCaps="false"
            android:textSize="14sp"
            />

    </LinearLayout>
</LinearLayout>
