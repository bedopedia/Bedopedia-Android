<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:id="@+id/card_view"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:layout_height="60dp"
    android:layout_marginBottom="8dp">

    <FrameLayout
        android:id="@+id/slot_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/slot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/RobotoMediumStyle"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Slot 1" />

        <ImageView
            android:id="@+id/slot_deselected_imageview"
            android:background="@drawable/cool_grey_circle"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/slot_selected_imageview"
            android:background="@drawable/slot_selected"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:visibility="gone" />


    </FrameLayout>
</androidx.cardview.widget.CardView>